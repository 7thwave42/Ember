<div class="container">
  <h4><%= @journey.title %> <%= @journey.start_date %> <%= @journey.end_date %></h4>
  <div class="row">
    <div class="col-6 card-boarders">
      <% @journey.items.each do |item| %>
        <%= render "journeys/journey_modal", item: item %>
        <div class="card">
          <div data-toggle="modal" data-target="#exampleModalCenter<%= item.id %>">
            <% if item.type == "Picture" %>
              <%= cl_image_tag item.photo.key, class: "photo" %>
            <% elsif item.type == "Video" %>
              <%= cl_video_tag item.video_rec.key %>
            <% elsif item.type == "Audio" %>
              <%= cl_video_tag item.audio_rec.key %>
            <% elsif item.type == "Note" %>
              <div class="card-body">
                <%= item.content %>
                <% if policy(item).destroy? %>
                  <div class="btn btn-primary">
                    <%= link_to "Destroy", item_path(item), method: :delete, data: { confirm: "Are you sure you wanna destroy it?" } %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
        <%#= render partial: 'items/item', locals: { item: item } %>
      <% end %>
      <br>
      <br>
    </div>
    <div class="ibtn"><%= link_to "Go back", journeys_path %></div>
  </div>
  <br>
  <br>
</div>
