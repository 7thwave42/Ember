<div class="journeys-body">
  <div class="layer">
    <div class="row">
      <div class="col-12 col-sm-6">
        <h5>Journeys</h5>
        <% @journeys.each do |journey| %>
          <div class="card">
            <%= link_to journey_path(journey) do %>
              <div class="card-body">
                <h3 class="card-title" style = "text-transform:capitalize;"><%= journey.title %></h3>
                <p class="card-text" style = "text-transform:capitalize;"><%= time_ago_in_words journey.start_date %></p>
                <!--  <%= link_to "See Journey", journey_path(journey) %> -->
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
