<div class="container" style="text-align:center">
  <div class="position">
    <div class="form-layer">
      <h2>Add picture to journey</h2>
      <%= simple_form_for [@journey,@picture], remote: true do |f| %>
        <%= f.input :photo, as: :file,
          input_html: { id: "photo-upload", class: 'hidden-uploader', placeholder: "Capture picture", accept: "image/*", capture: "camera" },
          label_html: { class: 'upload-media', accept: "image/*", capture: "camera" },
          label: 'Capture picture' %>
        <%= f.input :photo_attachment, as: :hidden,input_html: { placeholder: "Capture picture" } %>
        <%= image_tag "picture_placeholder.png", id: "img_prev", class: "photo-thumbnail", alt: "Journey Photo" %>
        <%= f.input :tag_list, label: "Add tags", hint: "Add your tags, separated by commas" %>
        <%= f.submit 'Save', class: 'btn-form' %>
      <% end %>
    </div>
  </div>
</div>
