<div class="container" style="text-align:center">
  <div class="position">
    <div class="form-layer">
      <h2>Add audio to journey</h2>
      <%= simple_form_for [@journey,@audio], remote: true do |f| %>
        <%= f.input :audio_rec, as: :file,
          input_html: { id: "photo-upload", class: 'hidden-uploader', placeholder: "Capture audio", accept: "audio/*", capture: "camera" },
          label_html: { class: 'upload-media', accept: "audio/*", capture: "microphone" },
          label: 'Capture audio' %>
        <%= f.input :audio_rec_attachment, as: :hidden,input_html: { placeholder: "Capture audio" } %>
        <%= f.input :tag_list, label: "Add tags", hint: "Add your tags, separated by commas" %>
        <%= f.input :location %>
        <%= f.submit 'Save', class: "btn-form"%>
      <% end %>
    </div>
  </div>
</div>
